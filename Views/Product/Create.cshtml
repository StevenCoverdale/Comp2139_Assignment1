@model assignment1.Models.Product

<h2>Add New Product</h2>

<form method="post">
    <div>
        <label for="Name">Product Name:</label>
        <input type="text" asp-for="Name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label for="Category">Category:</label>
        <select asp-for="Category">
            <option value="Electronics">Electronics</option>
            <option value="Clothing">Clothing</option>
            <option value="Appliances">Appliances</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div>
        <label for="Price">Price:</label>
        <input type="number" asp-for="Price" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div>
        <label for="QuantityInStock">Quantity in Stock:</label>
        <input type="number" asp-for="Quantity" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div>
        <label for="LowStockThreshold">Low Stock Threshold:</label>
        <input type="number" asp-for="LowStockThreshold" required />
        <span asp-validation-for="LowStockThreshold" class="text-danger"></span>
    </div>

    <button type="submit">Save</button>
</form>

<a asp-action="Index">Back to Product List</a>