@model assignment1.Models.Order

<h2>Order Confirmation</h2>

<h3>Order Summary</h3>
<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.OrderItems)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Price * item.Quantity)</td>
        </tr>
    }
    </tbody>
</table>

<h3>Total Price: @Model.TotalPrice</h3>

<a href="@Url.Action("Create", "Order")">Place Another Order</a>